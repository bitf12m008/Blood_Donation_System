@model IEnumerable<BloodDonationSystem.Models.Donor>

@{
    ViewBag.Title = "View Donors";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
 <div style="float:left;width:50%" >
        <table   class="table table-striped table-bordered table-hover table-condensed table-responsive" style="font-size:15px">
            <tbody>
                <tr style="font-size:20px; background-color:deepskyblue;color:white">

                    <td><label> Name </label></td>
                    <td><label> Email </label></td>
                    <td><label>Contact Number</label></td>
                    <td><label>City</label></td>
                    <td><label>Blood Group</label></td>
                    <td><label>Gender</label></td>
                    <td><label>Join Date</label></td>
                    <td><label>DOB</label></td>
            

                </tr>
                @foreach(var p in Model){
                    <tr style="height:20%;">
                        <td>@p.Name</td>
                        <td>@p.Email</td>
                        <td>@p.ContactNumber</td>
                        
                        <td>@p.City</td>
                        <td>@p.BloodGroup</td>
                        <td>@p.Sex</td>
                        
                        <td>@p.JoinDate</td>
                        <td>@p.DOB</td>
                                
            <td><a href="/Admin/DeleteDon?id=@p.Email" class="btn btn-primary btn-lg ">Delete</a></td>
            </tr>
                }
                
            </tbody>
        </table>
    </div>
        </div>
    </div>



